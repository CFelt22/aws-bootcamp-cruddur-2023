#! /usr/bin/bash

if [ -z "$1" ]; then
  echo "No TASK_ID argument supplied eg ./bin/ecs/connect-to-backend-flask d96a82369f994ce2958fe81b935a2c9b"
  exit 1
fi
TASK_ID=$1

CONTAINER_NAME=backend-flask

aws ecs execute-command  \
--region $AWS_DEFAULT_REGION \
--cluster CrdClusterFargate \
--task $TASK_ID \
--container $CONTAINER_NAME \
--command "/bin/bash" \
--interactive